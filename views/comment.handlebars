<div class="row mb-4 post" data-id="{{post.id}}">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
  </div>


  <div>
    {{#if comments.length}}
  {{#each comments as |comment|}}
    <div class="text-center">
      <p>Created by {{comment.user.name}} on {{format_date comment.date_created}}</p>
      <p>{{comment.content}}</p>
    </div>
  {{/each}}
{{else}}
  <p>No comments yet.</p>
{{/if}}
  </div>
 

<script src="/js/comment.js"></script>
