<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post" data-id="{{post.id}}">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
  <button type="button" class="btn btn-primary see-comments" data-id="{{post.id}}">See Comments</button>
  <div class="col-md-12">
    <form class="form comment-form" data-id="{{post.id}}" style="display: none;">
      <div class="form-group">
        <label for="comment">Leave a comment:</label>
        <textarea class="form-input" id="comment-{{post.id}}" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary submit-comment" data-id="{{post.id}}">Submit</button>
    </form>
  </div>
{{/each}}


<script src="./js/homepage.js" defer></script>
