<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4 post" data-id="{{post.id}}">
  <div class="col-md-5">
    <h2>
      {{post.title}}
    </h2>
    <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{post.content}}
    </p>
  </div>
</div>
  <div class="col-md-12">
    <form class="comment-form" data-id="{{post.id}}" style="display: none;">
      <div class="form-group">
        <label for="comment">Leave a comment:</label>
        <textarea class="form-control" id="comment-{{post.id}}" rows="3"></textarea>
      </div>
      <button type="submit" class="btn btn-primary submit-comment" data-id="{{post.id}}">Submit</button>
    </form>
  </div>
{{/each}}


<script src="./js/comment.js" defer></script>



